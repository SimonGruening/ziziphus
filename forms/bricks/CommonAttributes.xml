<html xmlns="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:bf="http://betterform.sourceforge.net/xforms"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:vra="http://www.vraweb.org/vracore4.htm"
        xmlns:bfc="http://betterform.sourceforge.net/xforms/controls"
        xmlns:xf="http://www.w3.org/2002/xforms"
        xmlns:xi="http://www.w3.org/2001/XInclude">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <title>VRA Attribute Subform</title>
    </head>
    <body>
        <div id="xforms">
            <!-- ###################### MODEL ################################## -->
            <!-- ###################### MODEL ################################## -->
            <!-- ###################### MODEL ################################## -->
            <div style="display:none">
                <xf:model id="m-vraAttributes" schema="../../resources/xsd/vra-types.xsd">
                    <xf:instance id="i-attributes">
                        <data xmlns="http://www.vraweb.org/vracore4.htm">
                            <vraElement
                                    dataDate=""
                                    extent=""
                                    href=""
                                    pref="false"
                                    refid=""
                                    rules=""
                                    source=""
                                    vocab=""
                                    transliteration=""/>
                        </data>
                    </xf:instance>
                    <xf:bind nodeset="instance('i-attributes')/*[1]">
                        <xf:bind nodeset="@dataDate" type="vra:dateValueType"/>
                        <xf:bind nodeset="@href" type="xsd:anyURI"/>
                        <xf:bind nodeset="@pref" type="xsd:boolean"/>
                    </xf:bind>

                </xf:model>
            </div>

            <xf:group appearance="minimal" model="m-vraAttributes" ref="instance('i-attributes')/vra:vraElement">
                <xf:label/>
                <xf:input ref="@dataDate">
                    <xf:label>dataDate</xf:label>
                </xf:input>
                <xf:input ref="@extent">
                    <xf:label>extent</xf:label>
                </xf:input>
                <xf:input ref="@href">
                    <xf:label>href</xf:label>
                </xf:input>
                <xf:input ref="@xml:lang">
                    <xf:label>lang</xf:label>
                </xf:input>
                <xf:input ref="@pref">
                    <xf:label>pref</xf:label>
                </xf:input>
                <xf:input ref="@refid">
                    <xf:label>refid</xf:label>
                </xf:input>
                <xf:input ref="@rules">
                    <xf:label>rules</xf:label>
                </xf:input>
                <xf:input ref="@source">
                    <xf:label>source</xf:label>
                </xf:input>
                <xf:select1 ref="@vocab">
                    <xf:label>vocab</xf:label>
                    <xf:item>
                        <xf:label>Gimme</xf:label>
                        <xf:value>Gimme</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>,gimme</xf:label>
                        <xf:value>,gimme</xf:value>
                    </xf:item>
                    <xf:item>
                        <xf:label>data</xf:label>
                        <xf:value>data</xf:value>
                    </xf:item>
                </xf:select1>
                <xf:input ref="@transliteration">
                    <xf:label>transliteration</xf:label>
                </xf:input>
            </xf:group>
        </div>
    </body>
</html>
